<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PUBLISH A MOVIE</title>
    <style>
        html,
        body {
            background-color: #f0f1f5;
        }
        
        .container {
            width: 1300px;
            margin: 50px auto;
        }
        
        .text span {
            text-align: right;
            vertical-align: middle;
            font-size: 14px;
            color: #606266;
            line-height: 40px;
            padding: 0 12px 0 0;
            box-sizing: border-box;
            width: 80px;
        }
        
        .text input {
            -webkit-appearance: none;
            background-color: #fff;
            background-image: none;
            border-radius: 4px;
            border: 1px solid #dcdfe6;
            box-sizing: border-box;
            color: #606266;
            display: inline-block;
            font-size: inherit;
            height: 40px;
            line-height: 40px;
            outline: none;
            padding: 0 15px;
            transition: border-color 0.2s cubic-bezier(0.645, 0.045, 0.355, 1);
            width: 100%;
        }
        
        .text {
            display: flex;
            justify-content: flex-start;
            align-items: center;
            margin-bottom: 15px;
            width: 50%;
            float: left;
        }
        
        button {
            display: inline-block;
            line-height: 1;
            white-space: nowrap;
            cursor: pointer;
            background: #fff;
            border: 1px solid #dcdfe6;
            color: #606266;
            -webkit-appearance: none;
            text-align: center;
            box-sizing: border-box;
            outline: none;
            margin: 0;
            transition: 0.1s;
            font-weight: 500;
            -moz-user-select: none;
            -webkit-user-select: none;
            -ms-user-select: none;
            padding: 12px 20px;
            font-size: 14px;
            border-radius: 4px;
            width: 43%;
        }
        
        .btn {
            justify-content: space-between;
            width: 100%;
            margin-top: 100px;
        }
        
        .submit {
            color: #fff;
            background-color: #409eff;
            border-color: #409eff;
        }
        
        .reset {
            color: #f56c6c;
            background: #fef0f0;
            border-color: #fbc4c4;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="text">
            <span>Title:</span>
            <input type="text" name="Title" required />
        </div>
        <div class="text">
            <span>Year:</span>
            <input type="text" name="Year" required />
        </div>
        <div class="text">
            <span>Rated:</span>
            <input type="text" name="Rated" required />
        </div>
        <div class="text">
            <span>Released:</span>
            <input type="text" name="Released" required />
        </div>
        <div class="text">
            <span>Runtime:</span>
            <input type="text" name="Runtime" required />
        </div>
        <div class="text">
            <span>Genre:</span>
            <input type="text" name="Genre" required />
        </div>
        <div class="text">
            <span>Director:</span>
            <input type="text" name="Director" required />
        </div>
        <div class="text">
            <span>Writer:</span>
            <input type="text" name="Writer" required />
        </div>
        <div class="text">
            <span>Actors:</span>
            <input type="text" name="Actors" required />
        </div>
        <div class="text">
            <span>Plot:</span>
            <input type="text" name="Plot" required />
        </div>
        <div class="text">
            <span>Language:</span>
            <input type="text" name="Language" required />
        </div>
        <div class="text">
            <span>Country:</span>
            <input type="text" name="Country" required />
        </div>
        <div class="text">
            <span>Awards:</span>
            <input type="text" name="Awards" required />
        </div>
        <div class="text">
            <span>Poster:</span>
            <input type="file" name="Poster" required />
        </div>
        <div class="text">
            <span>Ratings:</span>
            <input type="text" name="Ratings" required />
        </div>
        <div class="text">
            <span>Metascore:</span>
            <input type="text" name="Metascore" required />
        </div>
        <div class="text">
            <span>imdbRating:</span>
            <input type="text" name="imdbRating" required />
        </div>
        <div class="text">
            <span>imdbVotes:</span>
            <input type="text" name="imdbVotes" required />
        </div>
        <div class="text btn">
            <button class="submit" onclick="handleTap()">SUBMIT</button>
            <button class="reset" type="reset">RESET</button>
        </div>
    </div>
</body>
<script src="/static/js/jquery.min.js"></script>
<script>
    function handleTap() {
        if (!$("input[name=Title]").val()) {
            alert("Headings cannot be empty");
            return false;
        }
        let formData = new FormData();
        formData.append("Poster", $("input[name='Poster']")[0].files[0]);
        formData.append("Title", $("input[name=Title]").val());
        formData.append("Year", $("input[name=Year]").val());
        formData.append("Rated", $("input[name=Rated]").val());
        formData.append("Released", $("input[name=Released]").val());
        formData.append("Runtime", $("input[name=Runtime]").val());
        formData.append("Genre", $("input[name=Genre]").val());
        formData.append("Director", $("input[name=Director]").val());
        formData.append("Writer", $("input[name=Writer]").val());
        formData.append("Actors", $("input[name=Actors]").val());
        formData.append("Plot", $("input[name=Plot]").val());
        formData.append("Language", $("input[name=Language]").val());
        formData.append("Country", $("input[name=Country]").val());
        formData.append("Awards", $("input[name=Awards]").val());
        formData.append("Poster", $("input[name=Poster]").val());
        formData.append("Ratings", $("input[name=Ratings]").val());
        formData.append("Metascore", $("input[name=Metascore]").val());
        formData.append("imdbRating", $("input[name=imdbRating]").val());
        formData.append("imdbVotes", $("input[name=imdbVotes]").val());
        $.ajax({
            url: "/user/addMovies",
            type: "post",
            processData: false,
            contentType: false,
            data: formData,
            success: function(e) {
                if (e.success) {
                    window.location.reload();
                }
                alert(e.msg);
            },
        });
    }
</script>

</html>